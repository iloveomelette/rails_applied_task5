<h1>投稿詳細</h1>
<p>【メールアドレス】 <%= @food.user.email %></p>
<p>【料理名】 <%= @food.name %></p>
<% if @food.image? %>
  <%= image_tag @food.image.url %>
<% end %>
<p>【コメント】 <%= simple_format(h(@food.comment)) %></p>
<p>
  <% if @food.liked_by?(current_user) %>
    <%= render 'like', post: @post %>
  <% else %>
    <%= render 'dislike', post: @post %>
  <% end %>
</p>
<% if current_user.id == @food.user.id %>
  <%= link_to '編集', edit_food_path(@food) %>
  <%= link_to '削除', food_path(@food), method: :delete, data: { confirm: '削除しますか？' } %>
<% end %>
<%= link_to '投稿一覧', root_path %>